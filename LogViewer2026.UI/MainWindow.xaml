<Window x:Class="LogViewer2026.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LogViewer2026.UI"
        xmlns:avalon="http://icsharpcode.net/sharpdevelop/avalonedit"
        mc:Ignorable="d"
        Title="LogViewer2026 Log Viewer" 
        Height="800" Width="1400"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="CanResizeWithGrip"
        AllowsTransparency="True"
        Background="Transparent" Icon="/LogViewer2026_v2.png">
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="0"
                      ResizeBorderThickness="5"
                      GlassFrameThickness="0"
                      CornerRadius="0"
                      UseAeroCaptionButtons="False"/>
    </WindowChrome.WindowChrome>

    <Window.InputBindings>
        <KeyBinding Key="R" Modifiers="Control" Command="{Binding ClearFiltersCommand}"/>
        <KeyBinding Key="R" Modifiers="Control+Shift" Command="{Binding ReloadFilesCommand}"/>
    </Window.InputBindings>

    <Border Background="{DynamicResource WindowBackgroundBrush}"
            BorderBrush="{DynamicResource BorderBrush}"
            CornerRadius="10"            
            BorderThickness="1">
        <Grid x:Name="MainGrid" Margin="2">
            <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
           
        <!-- Custom Title Bar -->
        <DockPanel Grid.Row="0" 
                   Background="{DynamicResource WindowBackgroundBrush}"
                   MouseLeftButtonDown="TitleBar_MouseLeftButtonDown"
                   Height="30">
            <!-- Window Control Buttons -->
            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" Margin="0,0,5,0">
                <Button Content="🗕" 
                        Click="Minimize_Click"
                        Width="45" Height="30"
                        BorderThickness="0"
                        Background="Transparent"
                        Foreground="{DynamicResource PrimaryTextBrush}"
                        ToolTip="Minimize"
                        FontSize="14"/>
                <Button Content="🗖" 
                        Click="Maximize_Click"
                        Width="45" Height="30"
                        BorderThickness="0"
                        Background="Transparent"
                        Foreground="{DynamicResource PrimaryTextBrush}"
                        ToolTip="Maximize"
                        FontSize="14"/>
                <Button Content="✖" 
                        Click="Close_Click"
                        Width="45" Height="30"
                        BorderThickness="0"
                        Background="Transparent"
                        Foreground="{DynamicResource PrimaryTextBrush}"
                        ToolTip="Close"
                        FontSize="14"/>
            </StackPanel>

            <!-- Title -->
            <Image Source="/LogViewer2026_v2.png" 
                   Width="32" 
                   Height="32" 
                   Margin="10,0,5,0"
                   VerticalAlignment="Center"/>
            <TextBlock Text="LogViewer2026"
                       VerticalAlignment="Center"
                       Margin="0"
                       Foreground="{DynamicResource PrimaryTextBrush}"
                       FontSize="12"/>
        </DockPanel>

        <!-- Menu Bar -->
        <Menu Grid.Row="1" 
              Background="{DynamicResource WindowBackgroundBrush}" 
              Foreground="{DynamicResource PrimaryTextBrush}"
              Padding="10,0">
            <MenuItem Header="_File">
                <MenuItem Header="_Open Log File..." Command="{Binding OpenFileCommand}">
                    <MenuItem.Icon>
                        <TextBlock Text="📂" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Open _Multiple Files..." Command="{Binding OpenMultipleFilesCommand}">
                    <MenuItem.Icon>
                        <TextBlock Text="📁" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Open _Folder..." Command="{Binding OpenFolderCommand}">
                    <MenuItem.Icon>
                        <TextBlock Text="📂" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
                <Separator/>
                <MenuItem Header="_Reload Files" Command="{Binding ReloadFilesCommand}" InputGestureText="Ctrl+Shift+R">
                    <MenuItem.Icon>
                        <TextBlock Text="🔄" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
                <Separator/>
                <MenuItem Header="_Settings..." Click="Settings_Click">
                    <MenuItem.Icon>
                        <TextBlock Text="⚙️" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
                <Separator/>
                <MenuItem Header="E_xit" Click="Exit_Click">
                    <MenuItem.Icon>
                        <TextBlock Text="🚪" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="_Edit">
                <MenuItem Header="_Copy" Command="{Binding CopyToClipboardCommand}">
                    <MenuItem.Icon>
                        <TextBlock Text="📋" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="_Filters">
                <MenuItem Header="_Save Current Filter..." Command="{Binding SaveFilterCommand}">
                    <MenuItem.Icon>
                        <TextBlock Text="💾" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="_Load Filter..." Command="{Binding LoadFilterCommand}">
                    <MenuItem.Icon>
                        <TextBlock Text="📥" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="_Delete Filter..." Command="{Binding DeleteFilterCommand}">
                    <MenuItem.Icon>
                        <TextBlock Text="🗑️" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
                <Separator/>
                <MenuItem Header="_Export Filters..." Command="{Binding ExportFiltersCommand}">
                    <MenuItem.Icon>
                        <TextBlock Text="📤" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="_Import Filters..." Command="{Binding ImportFiltersCommand}">
                    <MenuItem.Icon>
                        <TextBlock Text="📥" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="_View">
                <MenuItem Header="_Filter Settings..." Click="OpenFilterWindow_Click" InputGestureText="">
                    <MenuItem.Icon>
                        <TextBlock Text="🔧" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
                <Separator/>
                <MenuItem Header="_Refresh" Command="{Binding ClearFiltersCommand}" InputGestureText="Ctrl+R">
                    <MenuItem.Icon>
                        <TextBlock Text="🔄" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
                <Separator/>
                <MenuItem x:Name="UndockLogEditorMenuItem" Header="Undock _Log Editor" Click="ToggleLogEditorDock_Click">
                    <MenuItem.Icon>
                        <TextBlock Text="⬜" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem x:Name="UndockLookingGlassMenuItem" Header="Undock Looking _Glass" Click="ToggleLookingGlassDock_Click">
                    <MenuItem.Icon>
                        <TextBlock Text="🔍" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
                <Separator/>
                <MenuItem Header="Show Looking _Glass" 
                          IsCheckable="True"
                          IsChecked="{Binding ShowLookingGlass, Mode=TwoWay}"
                          Click="ShowLookingGlass_Click">
                    <MenuItem.Icon>
                        <TextBlock Text="👁️" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
        </Menu>

        <!-- Toolbar -->
        <ToolBar Grid.Row="2" ToolBarTray.IsLocked="True" Padding="10,0">
            <Button Command="{Binding OpenFileCommand}" ToolTip="Open Log File">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="📂" FontSize="16" Margin="0,0,5,0"/>
                    <TextBlock Text="Open" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
           
            <Separator/>

            <TextBlock Text="Search:" VerticalAlignment="Center" Margin="5,0"/>
            <TextBox Width="200" 
                     Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" 
                     VerticalAlignment="Center" 
                     Margin="5,0"
                     x:Name="SearchBox"
                     Foreground="{DynamicResource PrimaryTextBrush}"
                     Background="{DynamicResource ControlBackgroundBrush}"
                     CaretBrush="{DynamicResource PrimaryTextBrush}"/>
            <Button Click="ClearSearch_Click" 
                    Content="✖" 
                    ToolTip="Clear Search"
                    Width="25"
                    Margin="2,0"
                    FontSize="14"/>
            <Button Command="{Binding FindPreviousCommand}"
                    Content="⬆️" 
                    ToolTip="Previous Result (Shift+F3)"
                    Width="30"
                    Margin="2,0"
                    IsEnabled="{Binding TotalSearchResults, Converter={StaticResource GreaterThanZeroConverter}}"/>
            <Button Command="{Binding FindNextCommand}" 
                    Content="⬇️" 
                    ToolTip="Next Result (F3)"
                    Width="30"
                    Margin="2,0"
                    IsEnabled="{Binding TotalSearchResults, Converter={StaticResource GreaterThanZeroConverter}}"/>
            <TextBlock VerticalAlignment="Center" 
                       Margin="5,0"
                       Visibility="{Binding TotalSearchResults, Converter={StaticResource GreaterThanZeroConverter}}">
                <Run Text="{Binding CurrentSearchResultIndex, Converter={StaticResource PlusOneConverter}, Mode=OneWay}"/>
                <Run Text="/"/>
                <Run Text="{Binding TotalSearchResults, Mode=OneWay}"/>
            </TextBlock>
            <CheckBox Content="Filter to results" 
                      IsChecked="{Binding FilterSearchResults}"
                      VerticalAlignment="Center"
                      Margin="5,0"
                      ToolTip="Show only lines matching the search"
                      Checked="FilterSearchCheckBox_Changed"
                      Unchecked="FilterSearchCheckBox_Changed"/>
            <Separator/>

            <Button Click="OpenFilterWindow_Click" 
                    ToolTip="Open Filter Settings Window"
                    Padding="10,5"
                    Margin="5,0">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="🔧" FontSize="16" Margin="0,0,5,0"/>
                    <TextBlock Text="Filters" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>

            <Button Command="{Binding ClearFiltersCommand}" 
                    Content="Clear Filters" 
                    Margin="5,0"
                    ToolTip="Clear all active filters"/>

            <Separator/>

            <Button Command="{Binding ReloadFilesCommand}"
                    ToolTip="Reload Files (Ctrl+Shift+R)"
                    Padding="8,5"
                    Margin="5,0"
                    Visibility="{Binding FilesHaveChanged, Converter={StaticResource BoolToVisibilityConverter}}">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="🔄" FontSize="16" Margin="0,0,5,0"/>
                    <TextBlock Text="Reload" VerticalAlignment="Center" FontWeight="SemiBold"/>
                </StackPanel>
            </Button>

            <Separator Visibility="{Binding HasMultipleFiles, Converter={StaticResource BoolToVisibilityConverter}}"/>
            <TextBlock Text="Go to file:" 
                       VerticalAlignment="Center" 
                       Margin="5,0"
                       Visibility="{Binding HasMultipleFiles, Converter={StaticResource BoolToVisibilityConverter}}"/>
            <ComboBox x:Name="GoToFileComboBox"
                      ItemsSource="{Binding LoadedFileNames}"
                      SelectedItem="{Binding SelectedDisplayFile, Mode=TwoWay}"
                      Width="200"
                      VerticalAlignment="Center"
                      Margin="5,0"
                      Visibility="{Binding HasMultipleFiles, Converter={StaticResource BoolToVisibilityConverter}}"
                      ToolTip="Navigate to the beginning of a loaded file"/>
            <Button Command="{Binding GoToSelectedFileCommand}"
                    Content="▶"
                    Width="25"
                    Margin="2,0"
                    FontSize="11"
                    ToolTip="Go to selected file (re-navigate)"
                    Visibility="{Binding HasMultipleFiles, Converter={StaticResource BoolToVisibilityConverter}}"/>
            <CheckBox Content="Show only"
                      IsChecked="{Binding ShowSelectedFileOnly}"
                      VerticalAlignment="Center"
                      Margin="5,0"
                      ToolTip="Show only the content of the selected file"
                      Visibility="{Binding HasMultipleFiles, Converter={StaticResource BoolToVisibilityConverter}}"/>
        </ToolBar>

        <!-- Log Editor Panel -->
        <Grid x:Name="LogEditorPanel" 
              Grid.Row="3" 
              Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*" MinHeight="0"/>
            </Grid.RowDefinitions>
            <DockPanel Grid.Row="0" LastChildFill="False" Background="{DynamicResource ControlBackgroundBrush}">
                <TextBlock Text="📝 Log content " FontWeight="SemiBold" VerticalAlignment="Center" Margin="5,3"/>
                <Button x:Name="LogEditorDockButton" DockPanel.Dock="Right" Content="⬜ Undock"
                        Click="ToggleLogEditorDock_Click" Padding="8,2" Margin="2" FontSize="11"
                        ToolTip="Undock Log Editor to a separate window"/>
            </DockPanel>
            <avalon:TextEditor Grid.Row="1"
                               x:Name="LogEditor"
                               FontFamily="Consolas"
                               FontSize="12"
                               IsReadOnly="True"
                               ShowLineNumbers="True"
                               WordWrap="False"
                               HorizontalScrollBarVisibility="Auto"
                               VerticalScrollBarVisibility="Auto"
                               Background="{DynamicResource EditorBackgroundBrush}"
                               Foreground="{DynamicResource EditorForegroundBrush}"
                               LineNumbersForeground="{DynamicResource SecondaryTextBrush}"
                               ContextMenuOpening="LogEditor_ContextMenuOpening">
                <avalon:TextEditor.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="Copy" 
                                  Command="{Binding CopyToClipboardCommand}"
                                  InputGestureText="Ctrl+C">
                            <MenuItem.Icon>
                                <TextBlock Text="📋" FontSize="14"/>
                            </MenuItem.Icon>
                        </MenuItem>
                        <MenuItem Header="Copy to Search" 
                                  Command="{Binding CopyToSearchCommand}">
                            <MenuItem.Icon>
                                <TextBlock Text="🔍" FontSize="14"/>
                            </MenuItem.Icon>
                        </MenuItem>
                        <Separator/>
                        <MenuItem Header="Select Whole Line" 
                                  Command="{Binding SelectWholeLineCommand}"
                                  InputGestureText="Ctrl+L">
                            <MenuItem.Icon>
                                <TextBlock Text="📄" FontSize="14"/>
                            </MenuItem.Icon>
                        </MenuItem>
                        <MenuItem Header="Select All" 
                                  Command="{Binding SelectAllCommand}"
                                  InputGestureText="Ctrl+A">
                            <MenuItem.Icon>
                                <TextBlock Text="📑" FontSize="14"/>
                            </MenuItem.Icon>
                        </MenuItem>
                    </ContextMenu>
                </avalon:TextEditor.ContextMenu>
                <avalon:TextEditor.Options>
                    <avalon:TextEditorOptions ShowSpaces="False"
                                              ShowTabs="False"
                                              ShowEndOfLine="False"
                                              ShowBoxForControlCharacters="False"
                                              EnableHyperlinks="True"
                                              EnableEmailHyperlinks="True"/>
                </avalon:TextEditor.Options>
            </avalon:TextEditor>
        </Grid>

        <GridSplitter x:Name="PanelSplitter" Grid.Row="4"
                      Height="5" 
                      HorizontalAlignment="Stretch" 
                      Background="{DynamicResource BorderBrush}"/>

        <!-- Progress Bar (Visible when loading) -->
        <Grid Grid.Row="3" Grid.RowSpan="3" Background="{DynamicResource WindowBackgroundBrush}" Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}" Panel.ZIndex="999">
            <StackPanel Margin="1" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="{Binding ProgressText}" 
                           FontWeight="SemiBold" 
                           HorizontalAlignment="Center" 
                           Margin="0,0,0,0"
                           Visibility="{Binding ProgressText, Converter={StaticResource NullToVisibilityConverter}}"/>
                <ProgressBar Width="400" 
                             Height="10" 
                             Value="{Binding ProgressPercentage}" 
                             Minimum="0" 
                             Maximum="100"
                             IsIndeterminate="{Binding ProgressPercentage, Converter={StaticResource IsZeroConverter}}"/>
                <TextBlock Text="{Binding ProgressPercentage, StringFormat='{}{0}% Complete'}" 
                           HorizontalAlignment="Center" 
                           Margin="0,5,0,0"
                           FontSize="12"
                           Foreground="{DynamicResource SecondaryTextBrush}"/>
            </StackPanel>
        </Grid>

        <!-- Looking Glass Panel -->
        <Grid x:Name="LogLookingGlasGroupBox" 
              Grid.Row="5"
              Margin="5"
              
              Visibility="{Binding ShowLookingGlass, Converter={StaticResource BoolToVisibilityConverter}}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*" MinHeight="0"/>
            </Grid.RowDefinitions>
            <DockPanel Grid.Row="0" LastChildFill="False" Background="{DynamicResource ControlBackgroundBrush}">
                <TextBlock Text="🔍 Looking glass" FontWeight="SemiBold" VerticalAlignment="Center" Margin="5,3"/>
                <Button Command="{Binding UpdateLookingGlassViewCommand}" 
                        Content="🔍 Update" 
                        Padding="5,2"
                        ToolTip="Update the looking glass with context around the current line"
                        Margin="10,2"/>
                <CheckBox Content="Auto-update on line change" 
                          IsChecked="{Binding AutoUpdateLookingGlass}"
                          VerticalAlignment="Center"
                          ToolTip="Automatically update the looking glass when moving to a different line in the main editor"
                          Checked="AutoUpdateCheckBox_Changed"
                          Unchecked="AutoUpdateCheckBox_Changed"
                          Margin="5,0"/>
                <Button x:Name="LookingGlassDockButton" DockPanel.Dock="Right" Content="⬜ Undock" 
                        Click="ToggleLookingGlassDock_Click" Padding="8,2" Margin="2" FontSize="11"
                        ToolTip="Undock Looking Glass to a separate window"/>
            </DockPanel>
            <avalon:TextEditor Grid.Row="1"
                               x:Name="LogLookingGlas"
                               FontFamily="Consolas"
                               FontSize="14"
                               IsReadOnly="True"
                               ShowLineNumbers="True"
                               WordWrap="False"
                               HorizontalScrollBarVisibility="Auto"
                               VerticalScrollBarVisibility="Auto"
                               Background="{DynamicResource EditorBackgroundBrush}"
                               Foreground="{DynamicResource EditorForegroundBrush}"
                               LineNumbersForeground="{DynamicResource SecondaryTextBrush}"
                               ContextMenuOpening="LogLookingGlas_ContextMenuOpening">
                <avalon:TextEditor.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="Copy" 
                                  Command="{Binding CopyToClipboardCommand}"
                                  InputGestureText="Ctrl+C">
                            <MenuItem.Icon>
                                <TextBlock Text="📋" FontSize="14"/>
                            </MenuItem.Icon>
                        </MenuItem>
                        <MenuItem Header="Copy to Search" 
                                  Command="{Binding CopyToSearchCommand}">
                            <MenuItem.Icon>
                                <TextBlock Text="🔍" FontSize="14"/>
                            </MenuItem.Icon>
                        </MenuItem>
                        <Separator/>
                        <MenuItem Header="Select Whole Line" 
                                  Command="{Binding SelectWholeLineCommand}"
                                  InputGestureText="Ctrl+L">
                            <MenuItem.Icon>
                                <TextBlock Text="📄" FontSize="14"/>
                            </MenuItem.Icon>
                        </MenuItem>
                        <MenuItem Header="Select All" 
                                  Command="{Binding SelectAllCommand}"
                                  InputGestureText="Ctrl+A">
                            <MenuItem.Icon>
                                <TextBlock Text="📑" FontSize="14"/>
                            </MenuItem.Icon>
                        </MenuItem>
                    </ContextMenu>
                </avalon:TextEditor.ContextMenu>
                <avalon:TextEditor.Options>
                    <avalon:TextEditorOptions ShowSpaces="False"
                                              ShowTabs="False"
                                              ShowEndOfLine="False"
                                              ShowBoxForControlCharacters="False"
                                              EnableHyperlinks="True"
                                              EnableEmailHyperlinks="True"/>
                </avalon:TextEditor.Options>
            </avalon:TextEditor>
        </Grid>

        <!-- Status Bar -->
        <StatusBar Grid.Row="6">
            <StatusBarItem>
                <TextBlock Text="{Binding StatusText}"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Total: "/>
                    <TextBlock Text="{Binding TotalLogCount, StringFormat='{}{0:N0} entries'}"/>
                </StackPanel>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Displayed: "/>
                    <TextBlock Text="{Binding LogEntries.Count, StringFormat='{}{0:N0}'}"/>
                </StackPanel>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <TextBlock Text="{Binding LoadedFilesInfo}"/>
            </StatusBarItem>
            <Separator Visibility="{Binding FilesHaveChanged, Converter={StaticResource BoolToVisibilityConverter}}"/>
            <StatusBarItem Visibility="{Binding FilesHaveChanged, Converter={StaticResource BoolToVisibilityConverter}}" HorizontalAlignment="Right">
                <Button Command="{Binding ReloadFilesCommand}"
                        Background="#FFF4C430"
                        BorderBrush="#FFD4A017"
                        BorderThickness="1"
                        Padding="8,2"
                        Cursor="Hand"
                        ToolTip="Files have been updated! Click to reload (Ctrl+Shift+R)">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="⚠️" FontSize="14" Margin="0,0,5,0"/>
                        <TextBlock Text="Files Updated - Click to Reload" FontWeight="SemiBold" Foreground="#FF333333"/>
                    </StackPanel>
                </Button>
            </StatusBarItem>
        </StatusBar>
    </Grid>
    </Border>
</Window>
