<Window x:Class="LogViewer2026.UI.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Settings - LogViewer2026" 
        Height="600" Width="700"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Application Settings" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>

        <TabControl Grid.Row="1">
            <!-- General Settings -->
            <TabItem Header="General">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="10">
                        <GroupBox Header="Display Settings" Margin="0,0,0,15">
                            <StackPanel Margin="10">
                                <Label Content="Theme:"/>
                                <ComboBox SelectedItem="{Binding Theme}" Margin="0,0,0,10">
                                    <ComboBoxItem Content="Light"/>
                                    <ComboBoxItem Content="Dark"/>
                                </ComboBox>

                                <Label Content="Max Recent Files:"/>
                                <TextBox Text="{Binding MaxRecentFiles}" Margin="0,0,0,10"/>

                                <Label Content="Looking Glass Context Lines:"/>
                                <TextBox Text="{Binding LookingGlassContextLines}" Margin="0,0,0,5"/>
                                <TextBlock Text="Number of lines to show before and after selected line in Log Looking Glass" 
                                           FontStyle="Italic" 
                                           Foreground="Gray"
                                           TextWrapping="Wrap"
                                           Margin="0,0,0,10"/>

                                <CheckBox Content="Auto-update Looking Glass on line change" 
                                          IsChecked="{Binding AutoUpdateLookingGlass}" 
                                          Margin="0,5,0,5"/>
                                <TextBlock Text="Automatically update the looking glass when moving to a different line in the main editor" 
                                           FontStyle="Italic" 
                                           Foreground="Gray"
                                           TextWrapping="Wrap"
                                           Margin="0,0,0,10"/>

                                <CheckBox Content="Filter to search results" 
                                          IsChecked="{Binding FilterSearchResults}" 
                                          Margin="0,5,0,5"/>
                                <TextBlock Text="Show only lines matching the search text in the main editor" 
                                           FontStyle="Italic" 
                                           Foreground="Gray"
                                           TextWrapping="Wrap"
                                           Margin="0,0,0,10"/>

                                <CheckBox Content="Show Looking Glass panel" 
                                          IsChecked="{Binding ShowLookingGlass}" 
                                          Margin="0,5,0,5"/>
                                <TextBlock Text="Show or hide the Looking Glass panel at the bottom of the window" 
                                           FontStyle="Italic" 
                                           Foreground="Gray"
                                           TextWrapping="Wrap"
                                           Margin="0,0,0,10"/>
                            </StackPanel>
                        </GroupBox>

                        <GroupBox Header="Performance Settings" Margin="0,0,0,15">
                            <StackPanel Margin="10">
                                <Label Content="Cache Size (entries):"/>
                                <TextBox Text="{Binding CacheSize}" Margin="0,0,0,10"/>

                                <Label Content="Max File Size (MB):"/>
                                <TextBox Text="{Binding MaxFileSizeMB}" Margin="0,0,0,10"/>

                                <CheckBox Content="Enable Full-Text Indexing" IsChecked="{Binding EnableIndexing}" Margin="0,5,0,10"/>
                            </StackPanel>
                        </GroupBox>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Serilog Settings -->
            <TabItem Header="Serilog">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="10">
                        <GroupBox Header="Log Format" Margin="0,0,0,15">
                            <StackPanel Margin="10">
                                <Label Content="Output Template:"/>
                                <TextBox Text="{Binding OutputTemplate}" 
                                         TextWrapping="Wrap" 
                                         AcceptsReturn="True"
                                         Height="80" 
                                         VerticalScrollBarVisibility="Auto"
                                         Margin="0,0,0,5"/>
                                <TextBlock Text="Example: [{Timestamp:yyyy-MM-dd HH:mm:ss.fff}] [{Level:u3}] {Message:lj}" 
                                           FontStyle="Italic" 
                                           Foreground="Gray"
                                           TextWrapping="Wrap"
                                           Margin="0,0,0,10"/>
                            </StackPanel>
                        </GroupBox>

                        <GroupBox Header="Rolling File Configuration" Margin="0,0,0,15">
                            <StackPanel Margin="10">
                                <Label Content="Path Format:"/>
                                <TextBox Text="{Binding PathFormat}" Margin="0,0,0,5"/>
                                <TextBlock Text="Example: logs/log-.txt (where - is replaced with date)" 
                                           FontStyle="Italic" 
                                           Foreground="Gray"
                                           TextWrapping="Wrap"
                                           Margin="0,0,0,10"/>

                                <Label Content="Rolling Interval:"/>
                                <ComboBox SelectedItem="{Binding RollingInterval}" Margin="0,0,0,5">
                                    <ComboBoxItem Content="Infinite"/>
                                    <ComboBoxItem Content="Year"/>
                                    <ComboBoxItem Content="Month"/>
                                    <ComboBoxItem Content="Day"/>
                                    <ComboBoxItem Content="Hour"/>
                                    <ComboBoxItem Content="Minute"/>
                                </ComboBox>
                                <TextBlock Text="Determines how log files are rolled over" 
                                           FontStyle="Italic" 
                                           Foreground="Gray"
                                           TextWrapping="Wrap"
                                           Margin="0,5,0,10"/>
                            </StackPanel>
                        </GroupBox>

                        <GroupBox Header="Multi-File Support" Margin="0,0,0,15">
                            <StackPanel Margin="10">
                                <CheckBox Content="Enable loading multiple log files" 
                                          IsChecked="{Binding LoadMultipleFiles}" 
                                          Margin="0,5,0,5"/>
                                <TextBlock Text="When enabled, you can load entire folders or multiple files at once" 
                                           FontStyle="Italic" 
                                           Foreground="Gray"
                                           TextWrapping="Wrap"
                                           Margin="0,0,0,10"/>
                            </StackPanel>
                        </GroupBox>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- About -->
            <TabItem Header="About">
                <StackPanel Margin="20">
                    <TextBlock Text="LogViewer2026" FontSize="24" FontWeight="Bold" Margin="0,0,0,10"/>
                    <TextBlock Text="High-Performance Serilog Log Viewer" FontSize="14" Foreground="Gray" Margin="0,0,0,20"/>
                    
                    <Separator Margin="0,0,0,20"/>
                    
                    <TextBlock Text="Version: 1.0.0" Margin="0,0,0,5"/>
                    <TextBlock Text="Framework: .NET 10" Margin="0,0,0,5"/>
                    <TextBlock Text="Platform: Windows 10/11" Margin="0,0,0,20"/>
                    
                    <Separator Margin="0,0,0,20"/>
                    
                    <Label Content="Settings Location:" FontWeight="Bold"/>
                    <TextBox Text="{Binding SettingsPath, Mode=OneWay}" 
                             IsReadOnly="True" 
                             Background="LightGray"
                             TextWrapping="Wrap"
                             Margin="0,0,0,20"/>
                    
                    <TextBlock Text="Â© 2024 LogViewer2026. Built with WPF and .NET 10." 
                               FontStyle="Italic" 
                               Foreground="Gray"
                               TextWrapping="Wrap"/>
                </StackPanel>
            </TabItem>
        </TabControl>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Reset to Defaults" 
                    Command="{Binding ResetToDefaultsCommand}"
                    Width="120" 
                    Height="30" 
                    Margin="0,0,10,0"/>
            <Button Content="Save" 
                    Command="{Binding SaveCommand}"
                    Width="80" 
                    Height="30" 
                    Margin="0,0,10,0"
                    IsDefault="True"/>
            <Button Content="Close" 
                    Click="Close_Click"
                    Width="80" 
                    Height="30"
                    IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
